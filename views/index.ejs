<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Lista de Empleados</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    rel="stylesheet"
  />
</head>
<body class="bg-light">

  <main class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-11">
        <div class="card shadow border-0">
          <div class="card-header bg-success text-white">
            <h4 class="mb-0">Lista de Empleados</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover align-middle text-center">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>DNI</th>
                    <th>Cargo</th>
                    <th>Área</th>
                    <th>Fecha Ingreso</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% registros.forEach(empleado => { %>
                    <tr>
                      <td><%= empleado.id %></td>
                      <td><%= empleado.nombres %></td>
                      <td><%= empleado.apellidos %></td>
                      <td><%= empleado.dni %></td>
                      <td><%= empleado.cargo %></td>
                      <td><%= empleado.area %></td>
                      <td><%= empleado.fechaIngreso %></td>
                      <td>
                        <a href="./edit/<%= empleado.id %>" class="btn btn-sm btn-outline-primary me-2">
                          <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="./delete/<%= empleado.id %>" class="btn btn-sm btn-outline-danger delete">
                          <i class="bi bi-trash-fill"></i>
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  <div class="d-flex justify-content-center mt-4">
    <a href="/create" class="btn btn-warning btn-lg">
      <i class="bi bi-plus-circle-fill me-2"></i>Agregar Registro
    </a>
  </div>
    </div>
  </main>

  <footer class="text-center text-muted py-3">
    <small>&copy; 2025 Empleados App</small>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const lnkEliminar = document.querySelectorAll(".delete");

      lnkEliminar.forEach(enlace => {
        enlace.addEventListener("click", (event) => {
          event.preventDefault(); 
          if (confirm("¿Está seguro de eliminar este registro?")) {
            window.location.href = event.target.getAttribute("href");
          }
        });
      });
    });
  </script>

</body>
</html>

